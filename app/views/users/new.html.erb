<div class="container">
  <div class="row">
    <h1 class="title">Register</h1>
  </div>
  <div class="row">
    <div class="col-lg-offset-3 col-lg-6">
      <%= form_for :user, url: users_sign_up_path do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: "Enter your email", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :fullname %>
        <%= f.text_field :fullname, placeholder: "Enter your fullname", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "Enter your password", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirm%>
        <%= f.password_field :password_confirm, placeholder: "Enter your password", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :avatar %>
        <%= f.file_field :avatar ,class:'form-control',placeholder:"Enter image"%>
      </div>
      <div class="text-center">
        <%= f.submit "register", class: "btn btn-info col-lg-12" %>
      </div>
    <% end %>
  </div>
</div>
</div>
